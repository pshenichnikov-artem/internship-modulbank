{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=accountservice;Username=postgres;Password=postgres;Port=5432"
  },
  "KeycloakPort": "8080",
  "Messaging": {
    "ServiceName": "account-service",
    "Exchange": "account.events",
    "AuditQueueName": "account.audit"
  },
  "RabbitMq": {
    "Host": "localhost",
    "Port": "5672",
    "User": "guest",
    "Password": "guest",
    "VirtualHost": "/"
  },
  "Health": {
    "OutboxWarnThreshold": 100
  },
  "AllowedHosts": "*",
  "Authentication": {
    "AuthenticationServerUrl": "http://localhost:8080",
    "Audience": "account-service",
    "Realm": "modulbank",
    "AdminUsername": "admin",
    "AdminPassword": "admin"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Error",
        "Microsoft.EntityFrameworkCore": "Error",
        "Hangfire": "Error",
        "MediatR": "Error",
        "AutoMapper": "Error",
        "AccountService": "Information"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/accountservice-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj} {Properties:j}{NewLine}",
          "shared": true
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/errors-.log",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Error",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}",
          "shared": true
        }
      }
    ],
    "Properties": {
      "Application": "AccountService"
    }
  }
}